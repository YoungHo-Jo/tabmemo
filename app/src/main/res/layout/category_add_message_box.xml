<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center"
              android:orientation="vertical" >

    <LinearLayout
        android:layout_width="320dip"
        android:layout_height="225dip"
        android:orientation="vertical"
        android:background="@drawable/dialog_new"
        android:layout_marginBottom="300dp"
        >



        <LinearLayout
            android:id="@+id/tv_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="40sp">
            <RadioGroup
                android:id="@+id/color_radio"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:weightSum="1"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:button="@null"
                    android:id="@+id/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/first_color"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <RadioButton
                    android:button="@null"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/second_color"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <RadioButton
                    android:button="@null"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/third_color"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <RadioButton
                    android:button="@null"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/four_color"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:button="@null"
                    android:id="@+id/pink"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/five_color"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <RadioButton
                    android:button="@null"
                    android:id="@+id/mint"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/six_color"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <RadioButton
                    android:button="@null"
                    android:id="@+id/yellow"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/seven_color"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <RadioButton
                    android:button="@null"
                    android:id="@+id/light_green"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/eight_color"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
            </RadioGroup>
        </LinearLayout>

        <EditText
            android:maxLength="8"
            android:lines="1"
            android:cursorVisible="false"
            android:layout_marginTop="20dp"
            android:id="@+id/Messagebox_edit"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="textCapSentences|textNoSuggestions|textEmailAddress"
            android:gravity="start"
            android:hint="카테고리 이름"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:autoText="false"
            />
        <View
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:background="#D9D9D9"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <Button
                android:id="@+id/bt_left"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:background="@drawable/dialog_delete"
                android:textColor="#8a8a8a"
                android:textSize = "20sp"
                android:text="삭제" />

            <Button
                android:id="@+id/bt_right"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:background="@drawable/dialog_complete"
                android:textColor="#101818"
                android:textSize = "20sp"
                android:text="완료" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>